{
  "name": "insertabot",
  "version": "1.0.0",
  "description": "Insertabot - AI-powered chatbot widget for websites",
  "scripts": {
    "dev": "node dev-server.js",
    "dev:port": "node dev-server.js --port",
    "dev:worker": "cd worker && wrangler dev",
    "deploy": "wrangler deploy --config worker/wrangler.toml --env=\"\"",
    "deploy:production": "wrangler deploy --config worker/wrangler.toml --env=\"\"",
    "deploy:dev": "echo '⚠️  Development deployments are archived. Use npm run deploy for production only.' && exit 1",
    "test": "node dev-server.js --port 8080",
    "prepare": "husky install || true",
    "lint:secrets": "secretlint --config .secretlintrc.json \"**/*\" --max-warnings 0",
    "scan:secrets": "npm run lint:secrets",

    "dev:wrangler": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "build": "tsc",
    "deploy:wrangler": "wrangler deploy",
    "deploy:wrangler:dev": "wrangler deploy --env development",
    "tail": "wrangler tail",
    "tail:dev": "wrangler tail --env development",
    "db:list": "wrangler d1 list",
    "db:query:prod": "wrangler d1 execute insertabot-production",
    "db:query:dev": "wrangler d1 execute insertabot-development",
    "db:migrate:prod": "wrangler d1 migrations apply insertabot-production",
    "db:migrate:dev": "wrangler d1 migrations apply insertabot-development",
    "db:backup": "wrangler d1 export insertabot-production --output=backup-$(date +%Y%m%d).sql",
    "db:migrate:avatars": "./scripts/migrate-add-avatars.sh",
    "secret:list": "wrangler secret list",
    "logs": "wrangler tail --format pretty",
    "health": "curl http://localhost:8787/health",
    "test:local": "npm run dev & sleep 5 && curl http://localhost:8787/health && kill %1"
  },
  "keywords": [
    "chatbot",
    "ai",
    "widget",
    "cloudflare-workers",
    "customer-support"
  ],
  "author": "Mistyk Media",
  "license": "GNU-v2",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260128.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.1",
    "husky": "^8.0.0",
    "secretlint": "^11.3.1",
    "wrangler": "^4.61.0"
  }
}