# Add these scripts to your package.json

{
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "tail": "wrangler tail",
    "tail:dev": "wrangler tail --env development",
    "db:list": "wrangler d1 list",
    "db:query:prod": "wrangler d1 execute insertabot-production",
    "db:query:dev": "wrangler d1 execute insertabot-development",
    "db:migrate:prod": "wrangler d1 migrations apply insertabot-production",
    "db:migrate:dev": "wrangler d1 migrations apply insertabot-development",
    "db:backup": "wrangler d1 export insertabot-production --output=backup-$(date +%Y%m%d).sql",
    "secret:list": "wrangler secret list",
    "logs": "wrangler tail --format pretty",
    "health": "curl http://localhost:8787/health",
    "test:local": "npm run dev & sleep 5 && curl http://localhost:8787/health && kill %1"
  }
}
